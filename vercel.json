{
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "composer.json",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "COMPOSER_ALLOW_SUPERUSER": "1",
      "COMPOSER_HOME": "/tmp"
    }
  }
  